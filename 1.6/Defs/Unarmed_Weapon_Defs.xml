            </researchPrerequisites>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Complex_Weapons_Workbench</li>
            </recipeUsers>
            <displayPriority>400</displayPriority>
        </recipeMaker>
        <weaponTags>
            <li>FCP_Unarmed</li>
        </weaponTags>
        <weaponClasses>
            <li>Melee</li>
        </weaponClasses>
        <tools>
            <li>
                <label>fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.2</cooldownTime>
